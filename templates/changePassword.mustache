<h1>Změnit heslo</h1>
<form method="post" action="changePasswordProcess.php">
    <table>
        <tr>
            <td><label for="actualPassword">Aktuální heslo: </label></td>
            <td><input id="actualPassword" type="password" name="actualPassword" required></td>
        </tr>
        <tr>
            <td><label for="password">Nové heslo: </label></td>
            <td><input id="password" type="password" name="password" required></td>
        </tr>
        <tr>
            <td><label for="passwordAgain">Nové heslo: </label></td>
            <td><input id="passwordAgain" type="password" name="passwordAgain" required></td>
        </tr>
        <tr>
            <td><input type="submit" name="submit" value="Změnit heslo" class="btn btn-primary"></td>
        </tr>
    </table>

</form>
{{#warning}}
    <p class="alert alert-danger mt-2">{{warning}}</p>
{{/warning}}
{{#message}}
    <p class="alert alert-primary mt-2">{{message}} <a href="./profil.php">Zpět na profil</a></p>
{{/message}}