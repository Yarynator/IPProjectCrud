<table class="table table-striped">
    <thead>
    <tr>
        <th>Name</th>
        <th>Number</th>
        <th>Phone</th>
        {{#admin}}<th>Actions</th>{{/admin}}
    </tr>
    </thead>

    <tbody>
    {{# rooms }}
        <tr>
            <td><a href="room.php?roomId={{ room_id }}">{{ name }}</a></td>
            <td>{{ no }}</td>
            <td>{{ phone }}</td>
            {{#admin}}<td>
                <form method="post" action="update.php">
                    <input type="hidden" name="room_id" value="{{room_id}}" />
                    <input type="submit" value="Update" class="btn btn-info" />
                </form>

                <form class="mt-2" method="post" action="delete.php" onsubmit="return confirm('Really delete room?\nAction cannot be undone!')">
                    <input type="hidden" name="room_id" value="{{room_id}}" />
                    <input type="submit" value="Delete" class="btn btn-danger" />
                </form>
            </td>{{/admin}}
        </tr>
    {{/ rooms }}
    </tbody>
</table>
{{#admin}}<a href="insert.php" class="btn btn-primary">New Room</a>{{/admin}}